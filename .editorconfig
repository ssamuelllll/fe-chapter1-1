# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 모든 파일
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, JSON, CSS, HTML
[*.{js,json,css,html}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
